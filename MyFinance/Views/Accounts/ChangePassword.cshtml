@model MyFinance.Models.ViewModels.ChangePasswordVM
@{
    ViewData["Title"] = "Mi Perfil";
}

<div id="subheader-container"></div>
<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header card-header-custom">
            <h3 class="card-title card-title-custom">🔐 Cambiar contraseña</h3>
        </div>

        @using (Html.BeginForm("ChangePassword", "Accounts", FormMethod.Post, new { id = "formChangePassword" }))
        {
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger px-4 pt-3"></div>

            <div class="card-body px-4">
                <div class="mb-3">
                    <label asp-for="CurrentPassword" class="form-label form-label-custom"></label>
                    <div class="input-group">
                        <input asp-for="CurrentPassword" class="form-control form-control-custom" id="CurrentPassword" placeholder="Ingresa tu contraseña actual" />
                        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('CurrentPassword')">
                            <i class="bi bi-eye" id="iconCurrentPassword"></i>
                        </button>
                    </div>
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label form-label-custom"></label>
                    <div class="input-group">
                        <input asp-for="NewPassword" name="NewPassword" id="NewPassword" class="form-control form-control-custom" placeholder="Mínimo 6 caracteres" />
                        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('NewPassword')">
                            <i class="bi bi-eye" id="iconNewPassword"></i>
                        </button>
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label form-label-custom"></label>
                    <div class="input-group">
                        <input asp-for="ConfirmPassword" name="ConfirmPassword" id="ConfirmPassword" class="form-control form-control-custom" placeholder="Repite la nueva contraseña" />
                        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('ConfirmPassword')">
                            <i class="bi bi-eye" id="iconConfirmPassword"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="card-footer bg-light px-4 py-3">
                <div class="row">
                    <div class="col-md-6 mb-2 mb-md-0">
                        <button type="submit" class="btn btn-primary-custom w-100" id="btn-save">
                            <i class="bi bi-shield-lock me-2"></i> Guardar cambios
                        </button>
                    </div>
                    <div class="col-md-6">
                        <a href="/Accounts/Profile" class="btn btn-secondary-custom w-100">
                            <i class="bi bi-arrow-left-circle me-2"></i> Volver al perfil
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/Accounts/ChangePassword.js"></script>
    <script src="~/js/Shared/UiComponents.js"></script>
}