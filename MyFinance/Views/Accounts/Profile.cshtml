@using System.Security.Claims

@{
    ViewData["Title"] = "Mi Perfil";
}

<div id="subheader-container"></div>
<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="fw-bold mb-0">👤 Perfil de usuario</h3>
        </div>

        <div class="card-body px-4 py-3">
            <div class="row mb-4">
                <div class="col-md-3 text-center">
                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 100px; height: 100px; margin: auto;">
                        <i class="bi bi-person-circle fs-1 text-primary"></i>
                    </div>
                </div>
                <div class="col-md-9">
                    <h4 class="text-primary fw-bold">@User.Identity!.Name</h4>
                    <p class="mb-1">
                        <strong>📧 Correo electrónico:</strong> @User.FindFirst(ClaimTypes.Email)?.Value
                    </p>
                    <p class="mb-1"><strong>🆔 ID de usuario:</strong> Usuario</p>
                    <p class="text-muted">🕒 Fecha: @DateTime.Today.ToLongDateString()</p>
                </div>
            </div>

            <hr>

            <div class="d-flex justify-content-end">
                <a href="/Accounts/ChangePassword" class="btn btn-outline-primary">
                    <i class="bi bi-key me-2"></i> Actualizar contraseña
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Accounts/Profile.js"></script>
    <script src="~/js/Shared/UiComponents.js"></script>
}