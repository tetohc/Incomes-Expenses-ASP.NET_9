@model MyFinance.Models.ViewModels.UserVM
@{
    ViewData["Title"] = "Registrar usuario";
}

<div id="subheader-container"></div>

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header card-header-custom">
            <h3 class="card-title card-title-custom">👤 Registrar usuario</h3>
        </div>

        @using (Html.BeginForm("Register", "Accounts", FormMethod.Post, new { id = "formCreateUser" }))
        {
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger px-4 pt-3"></div>

            <div class="card-body px-4">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label form-label-custom"></label>
                    <input asp-for="Name" class="form-control form-control-custom" placeholder="Nombre" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Surname" class="form-label form-label-custom"></label>
                    <input asp-for="Surname" class="form-control form-control-custom" placeholder="Apellido" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label form-label-custom"></label>
                    <input asp-for="Email" class="form-control form-control-custom" placeholder="Correo electrónico" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label form-label-custom"></label>
                    <div class="input-group">
                        <input asp-for="Password" class="form-control form-control-custom" id="Password" placeholder="Contraseña" />
                        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('Password')">
                            <i class="bi bi-eye" id="iconPassword"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label form-label-custom"></label>
                    <div class="input-group">
                        <input asp-for="ConfirmPassword" class="form-control form-control-custom" id="ConfirmPassword" placeholder="Confirmar contraseña" />
                        <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('ConfirmPassword')">
                            <i class="bi bi-eye" id="iconConfirmPassword"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="card-footer bg-light px-4 py-3">
                <div class="row">
                    <div class="col-md-6 mb-2 mb-md-0">
                        <button type="submit" id="btn-create" class="btn btn-primary w-100">
                            <i class="bi bi-save me-2"></i> Guardar
                        </button>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <i class="bi bi-x-circle me-2"></i> Cancelar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/Shared/UiComponents.js"></script>
    <script src="~/js/Accounts/Register.js"></script>
}

