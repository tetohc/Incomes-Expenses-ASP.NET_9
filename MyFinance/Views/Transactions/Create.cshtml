@model MyFinance.Models.ViewModels.TransactionVM
@{
    ViewData["Title"] = "Nueva Transacción";
}

<div id="subheader-container"></div>

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header card-header-custom">
            <h3 class="card-title card-title-custom">💳 Crear transacción</h3>
        </div>

        @using (Html.BeginForm("Create", "Transactions", FormMethod.Post, new { id = "formCreateTransaction" }))
        {
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger px-4 pt-3"></div>

            <div class="card-body px-4">
                <div class="mb-3">
                    <label asp-for="Type" class="form-label form-label-custom"></label>
                    <select asp-for="Type" asp-items="ViewBag.Type" class="form-select form-control-custom">
                        <option value="" selected disabled>Seleccione un tipo</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ServiceId" class="form-label form-label-custom"></label>
                    <select asp-for="ServiceId" class="form-select form-control-custom" id="serviceSelect">
                        <option value="" selected disabled>Seleccione el servicio</option>
                    </select>
                    <span asp-validation-for="ServiceId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TotalAmount" class="form-label form-label-custom"></label>
                    <div class="input-group">
                        <span class="input-group-text">₡</span>
                        <input asp-for="TotalAmount" class="form-control form-control-custom" placeholder="Escriba el monto" type="number" step="0.01" min="1" />
                    </div>
                    <span asp-validation-for="TotalAmount" class="text-danger" id="totalAmountError"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Comment" class="form-label form-label-custom"></label>
                    @Html.TextAreaFor(x => x.Comment, new { @class = "form-control form-control-custom", @placeholder = "Escriba un comentario o descripción", rows = "3" })
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Date" class="form-label form-label-custom"></label>
                    <input asp-for="Date" class="form-control form-control-custom" type="date" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>

            <div class="card-footer bg-light px-4 py-3">
                <div class="row">
                    <div class="col-md-6 mb-2 mb-md-0">
                        <button type="submit" id="btn-create" class="btn btn-primary-custom w-100">
                            <i class="bi bi-save me-2"></i> Guardar
                        </button>
                    </div>
                    <div class="col-md-6">
                        <a asp-action="Index" class="btn btn-secondary-custom w-100">
                            <i class="bi bi-x-circle me-2"></i> Cancelar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <style>
        .select2-container .select2-selection--single {
            height: 38px;
            padding-top: 4px;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/Transactions/Create.js"></script>
    <script src="~/js/Shared/UiComponents.js"></script>
}